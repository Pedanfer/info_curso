    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono_agenda"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono_agenda_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgendaOnline">
        <activity
            android:name=".Configuracion.Configuracion"
            android:exported="false" />
        <activity
            android:name=".Contactos.Actualizar_Contacto"
            android:exported="true" />
        <activity
            android:name=".Tareas.Definir_Asignaturas"
            android:exported="true" />
        <activity
            android:name=".Contactos.Detalle_contacto"
            android:exported="true" />
        <activity
            android:name=".Contactos.Agregar_Contacto"
