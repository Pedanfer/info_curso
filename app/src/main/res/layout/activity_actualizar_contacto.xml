<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contactos.Actualizar_Contacto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Portada - Imagen de perfil-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <!--Portada-->
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#ACE6F7"
                android:paddingTop="6dp"
                android:src="@drawable/profile_background" />
            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="140dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="110dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">
                <!--Imagen de perfil-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/Imagen_C_A"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="false"
                    android:scaleType="matrix"
                    android:foreground="@drawable/profile_photo_border"
                    android:background="@drawable/placeholder" />

            </androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/Actualizar_imagen_C_A"
                android:elevation="11dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="230dp"
                android:src="@drawable/edit_image" />

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/Nombres_C_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/worksans"
                android:hint="@string/Nombres_C_A"
                android:inputType="textCapWords|textPersonName" />

            <EditText
                android:id="@+id/Apellidos_C_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:hint="@string/Apellidos_C_A"
                android:inputType="textCapWords|textPersonName" />

            <EditText
                android:id="@+id/Correo_C_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:hint="@string/Correo_C_A"
                android:inputType="textEmailAddress" />



            <EditText
                android:id="@+id/Edad_C_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:hint="@string/Edad_C_A"
                android:inputType="number" />

            <EditText
                android:id="@+id/Direccion_C_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:hint="@string/Direccion_C_A"
                android:inputType="textCapWords|text" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="48dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Telefono_C_A"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans"
                    android:inputType="phone"
                    android:text="@string/Telefono_C_A"
                    android:textSize="20sp" />

                <FrameLayout
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle"/>

                    <ImageView
                        android:id="@+id/Actualizar_Telefono_C_A"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:src="@drawable/phone_number"/>

                </FrameLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></View>


            <Button
                android:id="@+id/Btn_Actualizar_C_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:text="@string/Btn_Actualizar_C_A" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>